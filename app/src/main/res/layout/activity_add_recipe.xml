<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.AddRecipeActivity">
    <!-- TODO: Extract string resources after finalizing -->
    <EditText
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:id="@+id/edTitle"
        />
    <EditText
        app:layout_constraintTop_toBottomOf="@id/edTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Summary"
        android:id="@+id/edSummary"
        />
    <EditText
        app:layout_constraintTop_toBottomOf="@id/edSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Time"
        android:id="@+id/edTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edServings"
        />
    <EditText
        app:layout_constraintTop_toBottomOf="@id/edSummary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Servings"
        android:id="@+id/edServings"
        app:layout_constraintStart_toEndOf="@+id/edTime"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <AutoCompleteTextView
        android:id="@+id/edExclude"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="25dp"
        android:hint="Ingredients: "
        app:layout_constraintTop_toBottomOf="@id/edTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAdd"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:text="Add"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edExclude" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edExclude" />
    <com.example.recipeapp.CustomViews.SearchSpinnerView
        app:hasIcon="true"
        android:id="@+id/spinnerCuisine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvIngredients"
        />
    <EditText
        android:id="@+id/edSteps"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="25dp"
        android:hint="Steps: "
        app:layout_constraintTop_toBottomOf="@id/spinnerCuisine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAdd"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddSteps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:text="Add"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edSteps" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSteps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/edSteps" />
</androidx.constraintlayout.widget.ConstraintLayout>